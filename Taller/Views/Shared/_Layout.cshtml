<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Taller Automotriz</title>

    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Sidebar -->
    <nav id="sidebar">
        
        <h4>Taller</h4>
        <div class="nav-menu">
            <a href="@Url.Action("Index", "Home")">Inicio</a>
            <a href="@Url.Action("Index", "Clientes")">Clientes</a>
            <a href="@Url.Action("Index", "Vehiculos")">Vehículos</a>
            <a href="@Url.Action("Index", "Mantenimientos")">Mantenimientos</a>
            <a href="@Url.Action("Index", "Citas")">Citas</a>
            <a href="@Url.Action("Index", "Inventario")">Inventario</a>
            <a href="@Url.Action("Index", "Facturas")">Facturas</a>
            <a href="@Url.Action("Index", "Empleados")">Empleados</a>
            <a href="@Url.Action("Index", "Proveedores")">Proveedores</a>
                     
        </div>
    </nav>

    <!-- Header -->
    <header id="header">
        <button id="btn-toggle-sidebar" title="Mostrar / Ocultar menú">☰</button>

        <div class="dropdown ms-auto">
            <span>Hola, Juan</span>
            <a class="dropdown-toggle" href="#" role="button" id="userMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://img.freepik.com/premium-photo/passport-photo-man-welldressed-caucasian-businessman-suit-tie-smiling-id-portrait_817921-61256.jpg" alt="Usuario" class="user-photo" />
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuLink">
                <li><a class="dropdown-item" href="@Url.Action("Index", "Perfil")">Perfil</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item text-danger" href="@Url.Action("Login", "Auth")">Cerrar sesión</a></li>
            </ul>
        </div>
    </header>

    <!-- Main Content -->
    <main id="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        Taller Automotriz © 2025
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const btnToggle = document.getElementById('btn-toggle-sidebar');
        const sidebar = document.getElementById('sidebar');
        const header = document.getElementById('header');
        const mainContent = document.getElementById('main-content');
        const footer = document.querySelector('footer.footer');

        btnToggle.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            header.classList.toggle('expanded');
            mainContent.classList.toggle('expanded');
            footer.classList.toggle('expanded');
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
