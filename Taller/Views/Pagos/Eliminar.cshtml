@model Taller.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h2>Eliminar Pago</h2>

<h4>¿Está seguro que desea eliminar este pago?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Cliente</dt>
    <dd class="col-sm-10">@Model.ClienteNombre</dd>

    <dt class="col-sm-2">Monto</dt>
    <dd class="col-sm-10">@Model.Monto</dd>

    <dt class="col-sm-2">Fecha</dt>
    <dd class="col-sm-10">@Model.FechaPago.ToShortDateString()</dd>

    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Estado</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
