@model List<Taller.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h2>Pagos</h2>

<form method="get" asp-action="Index" class="mb-3 row g-3">
    <div class="col-md-3">
        <input type="text" name="clienteFiltro" value="@ViewData["ClienteFilter"]" placeholder="Filtrar por Cliente" class="form-control" />
    </div>
    <div class="col-md-3">
        <input type="text" name="estadoFiltro" value="@ViewData["EstadoFilter"]" placeholder="Filtrar por Estado" class="form-control" />
    </div>
    <div class="col-md-3">
        <input type="date" name="fechaInicio" value="@ViewData["FechaInicioFilter"]" class="form-control" />
    </div>
    <div class="col-md-3">
        <input type="date" name="fechaFin" value="@ViewData["FechaFinFilter"]" class="form-control" />
    </div>
    <div class="col-md-12 text-end mt-2">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Crear" class="btn btn-success">Nuevo Pago</a>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Cliente</th>
            <th>Monto</th>
            <th>Método</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.ClienteNombre</td>
                <td>@pago.Monto</td>
                <td>@pago.MetodoPago</td>
                <td>@pago.FechaPago.ToString("yyyy-MM-dd")</td>
                <td>@pago.Estado</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@pago.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@pago.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
