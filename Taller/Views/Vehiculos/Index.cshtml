@model IEnumerable<Taller.Models.Vehiculo>

@{
    ViewData["Title"] = "Listado de Vehículos";
    var selectedClienteId = ViewData["ClienteIdFilter"]?.ToString();
    var clientes = (List<Taller.Models.Cliente>)ViewData["Clientes"];
}

<h2>Listado de Vehículos</h2>

<form method="get" asp-action="Index" class="mb-3 row g-3">
    <div class="col-md-4">
        <input type="text" name="placa" value="@ViewData["PlacaFilter"]" placeholder="Filtrar por placa" class="form-control" />
    </div>
    <div class="col-md-4">
        <input type="text" name="marca" value="@ViewData["MarcaFilter"]" placeholder="Filtrar por marca" class="form-control" />
    </div>
    
    <div class="col-md-12 text-end">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        <a asp-action="Crear" class="btn btn-success">Nuevo Vehículo</a>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Placa</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
            <th>Color</th>
            <th>Cliente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model)
        {
            <tr>
                <td>@vehiculo.Placa</td>
                <td>@vehiculo.Marca</td>
                <td>@vehiculo.Modelo</td>
                <td>@vehiculo.Anio</td>
                <td>@vehiculo.Color</td>
                <td>
                    @{
                        var cliente = clientes.FirstOrDefault(c => c.Id == vehiculo.ClienteId);
                        if (cliente != null)
                        {
                            @cliente.Nombre
                        }
                        else
                        {
                            @:Desconocido
                        }
                    }
                </td>
                <td>
                    
                    <a asp-action="Editar" asp-route-id="@vehiculo.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@vehiculo.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
