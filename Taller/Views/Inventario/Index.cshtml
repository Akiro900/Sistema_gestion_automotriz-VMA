@model IEnumerable<Taller.Models.Inventario>

<h2>Listado de Inventario</h2>

<form method="get" asp-action="Index" class="mb-3 row g-3">
    <div class="col-md-4">
        <input type="text" name="clienteId" value="@ViewData["ClienteFilter"]" placeholder="Filtrar por Pieza" class="form-control" />
    </div>
    <div class="col-md-4">
        <input type="text" name="estado" value="@ViewData["EstadoFilter"]" placeholder="Filtrar por Estado" class="form-control" />
    </div>
    <div class="col-md-12 text-end">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        <a asp-action="Crear" class="btn btn-success">Nuevo Inventario</a>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Fecha Ingreso</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Cantidad</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
