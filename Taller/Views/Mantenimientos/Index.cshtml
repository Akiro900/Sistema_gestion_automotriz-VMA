@model IEnumerable<Taller.Models.Mantenimiento>

@{
    ViewData["Title"] = "Listado de Mantenimientos";
}

<h2>Listado de Mantenimientos</h2>

<form method="get" asp-action="Index" class="mb-3 row g-3">
    <div class="col-md-4">
        <input type="text" name="vehiculoId" value="@ViewData["VehiculoFilter"]" placeholder="Filtrar por vehículo" class="form-control" />
    </div>
    <div class="col-md-4">
        <input type="text" name="estado" value="@ViewData["EstadoFilter"]" placeholder="Filtrar por estado" class="form-control" />
    </div>
    <div class="col-md-12 text-end">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        <a asp-action="Crear" class="btn btn-success">Nuevo Mantenimiento</a>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Vehículo</th>
            <th>Servicio</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mantenimiento in Model)
        {
            <tr>
                <td>@mantenimiento.VehiculoId</td>
                <td>@mantenimiento.Servicio</td>
                <td>@mantenimiento.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@mantenimiento.Estado</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@mantenimiento.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@mantenimiento.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
