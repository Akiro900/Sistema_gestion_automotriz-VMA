@model Taller.Models.Mantenimiento

<h2>Eliminar Mantenimiento</h2>

@if (TempData["MensajeError"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: '@TempData["MensajeError"]'
        });
    </script>
}

<div class="alert alert-warning">
    <p>¿Está seguro que desea eliminar el mantenimiento del vehículo <strong>@Model.Placa</strong> con el servicio <strong>@Model.Servicio</strong>?</p>
</div>

<form asp-action="Eliminar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
