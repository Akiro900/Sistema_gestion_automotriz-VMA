@model Taller.Models.Citas

<h2>Nueva Cita</h2>

<form asp-action="Crear" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="ClienteId" class="form-label"></label>
        <input asp-for="ClienteId" class="form-control" required />
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VehiculoId" class="form-label"></label>
        <input asp-for="VehiculoId" class="form-control" required />
        <span asp-validation-for="VehiculoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Servicio" class="form-label"></label>
        <input asp-for="Servicio" class="form-control" required />
        <span asp-validation-for="Servicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaCita" class="form-label"></label>
        <input asp-for="FechaCita" type="date" class="form-control" required />
        <span asp-validation-for="FechaCita" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Estado" class="form-label"></label>
        <input asp-for="Estado" class="form-control" required />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

