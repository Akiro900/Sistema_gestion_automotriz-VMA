@model Taller.Models.Citas

<h2>Eliminar Cita</h2>

<form asp-action="Eliminar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="alert alert-danger">
        ¿Está seguro que desea eliminar la cita para el vehículo <strong>@Model.VehiculoId</strong> del cliente <strong>@Model.ClienteId</strong>?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Servicio</dt>
        <dd class="col-sm-9">@Model.Servicio</dd>

        <dt class="col-sm-3">Fecha Cita</dt>
        <dd class="col-sm-9">@Model.FechaCita.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@Model.Estado</dd>
    </dl>

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
