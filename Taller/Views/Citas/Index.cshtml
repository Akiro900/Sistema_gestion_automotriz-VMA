@model IEnumerable<Taller.Models.Citas>

@{
    ViewData["Title"] = "Listado de Citas";
}

<h2>Listado de Citas</h2>
<!-- Popup de éxito -->
@if (TempData["MensajeExito"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Éxito',
            text: '@TempData["MensajeExito"]'
        });
    </script>
}

<form method="get" asp-action="Index" class="mb-3 row g-3">
    <div class="col-md-4">
        <input type="text" name="clienteId" value="@ViewData["ClienteFilter"]" placeholder="Filtrar por Cédula" class="form-control" />
    </div>
    <div class="col-md-4">
        <input type="text" name="estado" value="@ViewData["EstadoFilter"]" placeholder="Filtrar por Estado" class="form-control" />
    </div>
    <div class="col-md-12 text-end">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        <a asp-action="Crear" class="btn btn-success">Nueva Cita</a>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Cédula Cliente</th>
            <th>Placa Vehículo</th>
            <th>Servicio</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cita in Model)
        {
            <tr>
                <td>@cita.ClienteId</td>
                <td>@cita.VehiculoId</td>
                <td>@cita.Servicio</td>
                <td>@cita.FechaCita.ToString("dd/MM/yyyy")</td>
                <td>@cita.Estado</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@cita.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@cita.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
