@model Taller.Models.Servicio

<h2>Eliminar Servicio</h2>

<h4>¿Está seguro que desea eliminar este servicio?</h4>

<div class="card mb-3">
    <div class="card-body">
        <p><strong>Nombre:</strong> @Model.Nombre</p>
        <p><strong>Descripción:</strong> @Model.Descripcion</p>
        <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
    </div>
</div>

<form asp-action="Eliminar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
