@model IEnumerable<Taller.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
}

<h2>Servicios</h2>


<form method="get" asp-action="Index" class="mb-3 row g-3">
    <div class="col-md-4">
        <input type="text" name="nombre" value="@ViewData["NombreFilter"]" placeholder="Filtrar por Nombre" class="form-control" />
    </div>
    <div class="col-md-4">
        <input type="text" name="descripcion" value="@ViewData["DescripcionFilter"]" placeholder="Filtrar por Descripción" class="form-control" />
    </div>
    <div class="col-md-12 text-end">
        <a asp-action="Crear" class="btn btn-success">Crear Nuevo</a>
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>@item.Precio</td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
