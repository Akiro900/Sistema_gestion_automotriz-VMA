@model IEnumerable<Taller.Models.Factura>

<h2>Listado de Facturas</h2>
@if (TempData["MensajeExito"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Éxito',
            text: '@TempData["MensajeExito"]'
        });
    </script>
}

<form method="get" asp-action="Index" class="mb-3 row g-3">
    <div class="col-md-4">
        <input type="text" name="clienteId" value="@ViewData["ClienteFilter"]" placeholder="Filtrar por Cliente" class="form-control" />
    </div>
    <div class="col-md-4">
        <input type="text" name="estado" value="@ViewData["EstadoFilter"]" placeholder="Filtrar por Estado" class="form-control" />
    </div>
    <div class="col-md-12 text-end">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        <a asp-action="Crear" class="btn btn-success">Nueva Factura</a>
    </div>
</form>


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Factura</th>
            <th>Cliente ID</th>
            <th>Vehículo ID</th>
            <th>Fecha</th>
            <th>Monto Total</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var factura in Model)
        {
            <tr>
                <td>@factura.NumeroFactura</td>
                <td>@factura.ClienteId</td>
                <td>@factura.VehiculoId</td>
                <td>@factura.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@factura.MontoTotal.ToString("C")</td>
                <td>@factura.Descripcion</td>
                <td>
                    
                    <a asp-action="Eliminar" asp-route-id="@factura.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
