@model Taller.Models.Factura

<h2>Eliminar Factura</h2>

<form asp-action="Eliminar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="alert alert-danger">
        ¿Está seguro que desea eliminar la factura <strong>@Model.NumeroFactura</strong>?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Descripcion</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">Fecha Cita</dt>
        <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Monto</dt>
        <dd class="col-sm-9">@Model.MontoTotal</dd>
    </dl>

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
