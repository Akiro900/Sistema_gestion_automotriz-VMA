@model Taller.Models.ViewModels
@{
    ViewData["Title"] = "Taller";
}

<h1 class="mb-4">Panel de Control - Taller</h1>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Clientes Registrados</div>
            <div class="card-body">
                <h3 class="card-title">@Model.TotalClientes</h3>
                <p class="card-text">Clientes activos en el sistema.</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Vehículos Registrados</div>
            <div class="card-body">
                <h3 class="card-title">@Model.TotalVehiculos</h3>
                <p class="card-text">Vehículos asociados a clientes.</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Citas Programadas</div>
            <div class="card-body">
                <h3 class="card-title">@Model.TotalCitasPendientes</h3>
                <p class="card-text">Servicios próximos a realizarse.</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-header">Mantenimientos Pendientes</div>
            <div class="card-body">
                <h3 class="card-title">@Model.TotalMantenimientosPendientes</h3>
                <p class="card-text">Alertas de mantenimientos próximos o atrasados.</p>
            </div>
        </div>
    </div>
</div>

<h2>Últimos vehículos registrados</h2>
<table class="table table-striped table-bordered mb-5">
    <thead class="table-dark">
        <tr>
            <th>Placa</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
            <th>Cliente</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.UltimosVehiculos)
        {
            <tr>
                <td>@v.Placa</td>
                <td>@v.Marca</td>
                <td>@v.Modelo</td>
                <td>@v.Anio</td>
                <td>@v.ClienteId</td>
            </tr>
        }
    </tbody>
</table>

<h2>Próximas citas</h2>
<table class="table table-striped table-bordered mb-5">
    <thead class="table-dark">
        <tr>
            <th>Cliente</th>
            <th>Vehículo</th>
            <th>Fecha</th>
            <th>Servicio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.ProximasCitas)
        {
            <tr>
                <td>@c.ClienteId</td>
                <td>@c.VehiculoId</td>
                <td>@c.FechaCita.ToShortDateString()</td>
                <td>@c.Servicio</td>
            </tr>
        }
    </tbody>
</table>

<h2>Mantenimientos recientes</h2>
<table class="table table-striped table-bordered mb-5">
    <thead class="table-dark">
        <tr>
            <th>Vehículo</th>
            <th>Fecha</th>
            <th>Tipo de servicio</th>
            <th>Costo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.MantenimientosRecientes)
        {
            <tr>
                <td>@m.Placa</td>
                <td>@m.FechaIngreso.ToShortDateString()</td>
                <td>@m.Servicio</td>
                <td>@m.Costo</td>
            </tr>
        }
    </tbody>
</table>
